    <Color x:Key="DataGridRow">#FF524B2C</Color>
    <SolidColorBrush x:Key="DataGridRowBrush" Color="{StaticResource DataGridRow}"/>

    <Color x:Key="DataGridRowSelected">#FF524B2C</Color>
